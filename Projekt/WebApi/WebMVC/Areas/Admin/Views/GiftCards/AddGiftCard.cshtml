@using WebMVC.Areas.Admin.Models
@model AddGiftCardViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
    ViewData["Title"] = "Add Gift Card";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="AddGiftCard" method="post">
    <div class="form-group">
        <label asp-for="Discount" class="control-label">Discount</label>
        <input type="number" step="any" asp-for="Discount" class="form-control" />
        <span asp-validation-for="Discount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ValidFrom" class="control-label">Valid from</label>
        <input type="date" asp-for="ValidFrom" class="form-control" />
        <span asp-validation-for="ValidFrom" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ValidTo" class="control-label">Valid to</label>
        <input type="date" asp-for="ValidTo" class="form-control" />
        <span asp-validation-for="ValidTo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CouponCodeCount" class="control-label">Pregenerated count of coupon codes</label>
        <input type="number" asp-for="CouponCodeCount" class="form-control" />
        <span asp-validation-for="CouponCodeCount" class="text-danger"></span>
    <div class="form-group">
        <input type="submit" value="Add Gift Card" class="btn btn-primary" />
    </div>
</form>